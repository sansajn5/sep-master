{
  "compilerOptions": {
    "target": "es6",
    "lib": [
      "es6",
      "dom",
      "es2017"
    ],
    "module": "commonjs",
    "outDir": "dist",
    "sourceMap": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    // This rule is introduced because of JS files, should be removed once we remove the JS files.
    "allowJs": true
  },
  "include": [
    "src/*.ts",
    "src/**/*.ts",
    "src/**/**/*.ts",
    "src/**/**/**/*.ts",
  ],
  "exclude": [
    "node_modules"
  ]
}
